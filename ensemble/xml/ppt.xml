<ENSEMBLE NAME="Prepared Piano Test">

	<GLOBAL_PARAMETERS CLOCK_MODE="CLOCK_CPU" PROCESS_MODE="REAL_TIME"/>
	
  	<!-- ********** ENVIRONMENT AGENT ********** -->

	<ENVIRONMENT_AGENT_CLASS NAME="ENVIRONMENT" CLASS="ensemble.EnvironmentAgent">
		<WORLD CLASS="ensemble.world.World" CLASS_ENTITY_STATE="ensemble.world.EntityState3D">
			<ARG NAME="dimensions" VALUE="3" />
			<ARG NAME="structure" VALUE="continuous" />
			<ARG NAME="form" VALUE="cube:200:infinite" />
			<LAW CLASS="ensemble.movement.MovementLaw" >
				<ARG NAME="friction_coefficient" VALUE="0.25" />
			</LAW>
		</WORLD>
		<EVENT_SERVER CLASS="ensemble.audio.AudioEventServer" COMM="ensemble.comm.direct.CommDirect" PERIOD="200 100 160 2000">
			<ARG NAME="SPEED_SOUND" VALUE="343.3" />
			<ARG NAME="REFERENCE_DISTANCE" VALUE="1.0" />
			<ARG NAME="ROLLOF_FACTOR" VALUE="1.0" />
		</EVENT_SERVER>
		<EVENT_SERVER CLASS="ensemble.movement.MovementEventServer" COMM="ensemble.comm.direct.CommDirect" PERIOD="100 0">
			<ARG NAME="friction_coefficient" VALUE="0.25" />
			<ARG NAME="gravity" VALUE="10" />
		</EVENT_SERVER>
	</ENVIRONMENT_AGENT_CLASS>
	
  <!-- ********** MUSICAL AGENT CLASSES ********** -->

	<MUSICAL_AGENT_CLASS NAME="MUSICIAN" CLASS="ensemble.MusicalAgent">
		<ARG NAME="arg_ma" VALUE="mamama" />
		<KB>
			<FACT NAME="filename" VALUE="" PUBLIC="false" />
			<FACT NAME="instructions" VALUE="" PUBLIC="false" />
		</KB>
		<COMPONENTS>
			<REASONING NAME="AudioReasoning" CLASS="ensemble.apps.pp.PP_Reasoning" REASONING_MODE="REACTIVE" />
			<ACTUATOR NAME="Mouth" CLASS="ensemble.Actuator" EVENT_TYPE="AUDIO" COMM="ensemble.comm.direct.CommDirect" />
			<SENSOR NAME="Ear" CLASS="ensemble.Sensor" EVENT_TYPE="AUDIO" COMM="ensemble.comm.direct.CommDirect" />
			<REASONING NAME="MovementReasoning" CLASS="ensemble.movement.MovementReasoning" REASONING_MODE="CYCLIC" />
			<ACTUATOR NAME="Legs" CLASS="ensemble.Actuator" EVENT_TYPE="MOVEMENT" COMM="ensemble.comm.direct.CommDirect" />
			<SENSOR NAME="Eyes" CLASS="ensemble.Sensor" EVENT_TYPE="MOVEMENT" COMM="ensemble.comm.direct.CommDirect" />
		</COMPONENTS>
	</MUSICAL_AGENT_CLASS>
	
	<MUSICAL_AGENT_CLASS NAME="LISTENER" CLASS="ensemble.MusicalAgent">
		<COMPONENTS>
			<REASONING NAME="AudioReasoning" CLASS="ensemble.audio.portaudio.PAOutputReasoning" REASONING_MODE="REACTIVE" />
			<SENSOR NAME="Ear_left" CLASS="ensemble.Sensor" EVENT_TYPE="AUDIO" COMM="ensemble.comm.direct.CommDirect" POSITION="(-2;0;0)"/>
			<SENSOR NAME="Ear_right" CLASS="ensemble.Sensor" EVENT_TYPE="AUDIO" COMM="ensemble.comm.direct.CommDirect" POSITION="(2;0;0)"/>
			<ACTUATOR NAME="Legs" CLASS="ensemble.Actuator" EVENT_TYPE="MOVEMENT" COMM="ensemble.comm.direct.CommDirect" />
			<SENSOR NAME="Eyes" CLASS="ensemble.Sensor" EVENT_TYPE="MOVEMENT" COMM="ensemble.comm.direct.CommDirect" />
		</COMPONENTS>
	</MUSICAL_AGENT_CLASS>
	
	<MUSICAL_AGENT_CLASS NAME="WALKER" CLASS="ensemble.MusicalAgent">
		<COMPONENTS>
			<REASONING NAME="MovementReasoning" CLASS="ensemble.movement.MovementReasoning" REASONING_MODE="CYCLIC" />
			<ACTUATOR NAME="Legs" CLASS="ensemble.Actuator" EVENT_TYPE="MOVEMENT" COMM="ensemble.comm.direct.CommDirect" />
			<SENSOR NAME="Eyes" CLASS="ensemble.Sensor" EVENT_TYPE="MOVEMENT" COMM="ensemble.comm.direct.CommDirect" />
		</COMPONENTS>
	</MUSICAL_AGENT_CLASS>
